pipeline {
    agent { label 'Prod' }

    triggers {
        githubPush()
    }

    environment {
        PROD_DIR = "/var/lib/jenkins/prod-app"
    }

    stages {
        stage('Deploy to Prod') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Varshitha769/Jen-assign-1.git'

                sh '''
                echo "Running as user:"
                whoami

                echo "Workspace:"
                pwd

                mkdir -p $PROD_DIR
                rsync -av --delete --exclude='.git' ./ $PROD_DIR/
                echo "Deployed to PROD server"
                '''
            }
        }
    }
}

