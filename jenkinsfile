pipeline {
    agent { label 'test' }

    triggers {
        githubPush()
    }

    environment {
        TEST_DIR = "/var/lib/jenkins/test-app"
    }

    stages {
        stage('Deploy to test') {
            steps {
                git branch: 'test',
                    url: 'https://github.com/Varshitha769/Jen-assign-1.git'

                sh '''
                echo "Running as user:"
                whoami

                echo "Workspace:"
                pwd

                sudo mkdir -p $TEST_DIR
                sudo cp -r * $TEST_DIR/
                echo "Deployed to TEST server"
                '''
            }
        }
    }
}
