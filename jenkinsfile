pipeline {
    agent any

    triggers {
        githubPush()
    }

    stages {
        stage('Pull Code') {
            steps {
                git branch: 'develop',
                    url: 'https://github.com/Varshitha769/Jen-assign-1.git'

                sh '''
                echo "Running as user:"
                whoami

                echo "Workspace:"
                pwd

                sudo mkdir -p /var/lib/jenkins/mycode
                sudo cp -r * /var/lib/jenkins/mycode/
                echo "Files copied to /var/lib/jenkins/mycode"
                '''
            }
        }
    }
}
